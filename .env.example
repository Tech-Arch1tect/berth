BRX_SERVER_HOST=localhost
BRX_SERVER_PORT=8080

# Database Configuration
BRX_DATABASE_DRIVER=sqlite
BRX_DATABASE_DSN=app.db
BRX_DATABASE_AUTO_MIGRATE=true

BRX_INERTIA_ENABLED=true
BRX_INERTIA_ROOT_VIEW=app.html
BRX_INERTIA_VERSION=1.0
BRX_INERTIA_SSR_ENABLED=false
BRX_INERTIA_DEVELOPMENT=false

# Session Configuration
BRX_SESSION_ENABLED=true
BRX_SESSION_STORE=database
BRX_SESSION_NAME=brx-starter-kit
BRX_SESSION_MAX_AGE=24h
BRX_SESSION_SECURE=false
BRX_SESSION_HTTP_ONLY=true
BRX_SESSION_SAME_SITE=lax

# Authentication Configuration
BRX_AUTH_MIN_LENGTH=8
BRX_AUTH_REQUIRE_UPPER=true
BRX_AUTH_REQUIRE_LOWER=true
BRX_AUTH_REQUIRE_NUMBER=true
BRX_AUTH_REQUIRE_SPECIAL=false
BRX_AUTH_BCRYPT_COST=10
