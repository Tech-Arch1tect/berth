BRX_SERVER_HOST=localhost
BRX_SERVER_PORT=8080

# Database Configuration
BRX_DATABASE_DRIVER=sqlite
BRX_DATABASE_DSN=app.db
BRX_DATABASE_AUTO_MIGRATE=true

BRX_INERTIA_ENABLED=true
BRX_INERTIA_ROOT_VIEW=app.html
BRX_INERTIA_VERSION=1.0
BRX_INERTIA_SSR_ENABLED=false
BRX_INERTIA_DEVELOPMENT=false

# Session Configuration
BRX_SESSION_ENABLED=true
BRX_SESSION_STORE=database
BRX_SESSION_NAME=brx-starter-kit
BRX_SESSION_MAX_AGE=24h
BRX_SESSION_SECURE=false
BRX_SESSION_HTTP_ONLY=true
BRX_SESSION_SAME_SITE=lax

# Authentication Configuration
BRX_AUTH_MIN_LENGTH=8
BRX_AUTH_REQUIRE_UPPER=true
BRX_AUTH_REQUIRE_LOWER=true
BRX_AUTH_REQUIRE_NUMBER=true
BRX_AUTH_REQUIRE_SPECIAL=false
BRX_AUTH_BCRYPT_COST=10

# Rate Limiting Configuration
BRX_RATELIMIT_STORE=memory

# CSRF Configuration
BRX_CSRF_ENABLED=false
BRX_CSRF_TOKEN_LENGTH=32
BRX_CSRF_TOKEN_LOOKUP=header:X-CSRF-Token
BRX_CSRF_COOKIE_NAME=_csrf
BRX_CSRF_COOKIE_PATH=/
BRX_CSRF_COOKIE_MAX_AGE=86400
BRX_CSRF_COOKIE_SECURE=false
BRX_CSRF_COOKIE_HTTP_ONLY=false
BRX_CSRF_COOKIE_SAME_SITE=lax

# Mail Configuration (Optional)
# Uncomment and configure these to enable email functionality
# BRX_MAIL_HOST=smtp.gmail.com
# BRX_MAIL_PORT=587
# BRX_MAIL_USERNAME=your-email@gmail.com
# BRX_MAIL_PASSWORD=your-app-password
# BRX_MAIL_FROM_ADDRESS=noreply@yourapp.com
# BRX_MAIL_FROM_NAME=brx Starter Kit
# BRX_MAIL_ENCRYPTION=tls
# BRX_MAIL_TEMPLATES_DIR=templates/mail

# Common Email Provider Examples:
# Gmail: smtp.gmail.com:587 (use App Passwords)
# Outlook: smtp-mail.outlook.com:587
# Yahoo: smtp.mail.yahoo.com:587 (use App Passwords)
# SendGrid: smtp.sendgrid.net:587 (username=apikey)

# Server Configuration (Trusted Proxies)
# SECURITY: Only configure if using reverse proxy (nginx, load balancer, etc.)
# Use SPECIFIC IP addresses or small CIDR ranges - NOT broad networks!
# Leave empty for direct connections (most secure for single-server deployments)
# 
# SECURE examples:
# BRX_SERVER_TRUSTED_PROXIES=192.168.1.100/32        # Single proxy server
# BRX_SERVER_TRUSTED_PROXIES=10.0.0.10/32,10.0.0.11/32  # Multiple specific IPs
# BRX_SERVER_TRUSTED_PROXIES=172.16.1.0/28           # Small subnet (16 IPs max)
#
# INSECURE examples (DO NOT USE):
# BRX_SERVER_TRUSTED_PROXIES=10.0.0.0/8              # Entire private network
